<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editScroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EDEDED"
    >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
	    <RelativeLayout
	        android:id="@+id/contactHeader"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" > 
	        <View
			    android:layout_height="90dp"
			    android:layout_width="1dp"
			    android:layout_toLeftOf="@+id/image"
			    android:background="#000000"/>
		    <ImageView
		        android:contentDescription="@string/contact_image_description"
		        android:onClick="imageClicked"
		        android:id="@+id/image"
		        android:background="#D6D6D6"
		        android:layout_width="90dp"
		        android:scaleType="centerCrop"
		        android:layout_height="90dp"
		        android:layout_alignParentRight="true"
		        />
		</RelativeLayout>
		
	    <View
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:background="#000000"/>
		
	    <LinearLayout
	        android:id="@+id/firstName"
	        android:onClick="firstNameClicked"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/rectangle_white"
	        android:orientation="horizontal" >
		    <TextView
		        android:id="@+id/firstNameHeading"
		        android:textColor="#787878"
		        android:paddingTop="15dp"
		        android:paddingLeft="10dp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/first_name" />
		    <TextView
		        android:id="@+id/firstName2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="15dp"
		        android:paddingLeft="10dp"
		        android:text="@string/first_name" />
	    </LinearLayout>
	    
    	<EditText
	        android:id="@+id/editFirstName"
	        android:visibility="gone"
	        android:background="@drawable/rectangle_grey"
	        android:layout_width="fill_parent"
	        android:paddingTop="15dp"
	        android:paddingLeft="10dp"
	        android:paddingBottom="15dp"
	        android:layout_height="50dp"
	        android:inputType="textPersonName|textCapWords" />
	    	    
	    <View
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:background="#000000"/>
	    
	    <LinearLayout
	        android:id="@+id/lastName"
	        android:onClick="lastNameClicked"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/rectangle_white"
	        android:orientation="horizontal" >
		    <TextView
		        android:id="@+id/lastNameHeading"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		        android:paddingTop="15dp"
		        android:paddingLeft="10dp"
		        android:textColor="#787878"
		        android:text="@string/last_name" />
		    <TextView
		        android:id="@+id/lastName2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="15dp"
		        android:paddingLeft="10dp"
		        android:text="@string/first_name" />
	    </LinearLayout>
    	
    	<EditText
	        android:id="@+id/editLastName"
	        android:visibility="gone"
	        android:background="@drawable/rectangle_grey"
	        android:layout_width="fill_parent"
	        android:paddingTop="15dp"
	        android:paddingLeft="10dp"
	        android:paddingBottom="15dp"
	        android:layout_height="50dp"
	        android:inputType="textPersonName|textCapWords"/>
	    	    
	    <View
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:background="#000000"/>
	
	    <LinearLayout
	        android:id="@+id/mobile"
	        android:onClick="mobilePhoneClicked"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/rectangle_white"
	        android:orientation="horizontal" >
		    <TextView
		        android:id="@+id/mobilePhoneHeading"
		        android:layout_width="wrap_content"
		   		android:layout_height="wrap_content"
		        android:paddingTop="15dp"
		        android:textColor="#787878"
		        android:paddingLeft="10dp"
		        android:text="@string/mobile_phone" />
   		    <TextView
		        android:id="@+id/mobilePhone2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="15dp"
		        android:paddingLeft="10dp"
		        android:text="@string/first_name" />
	    </LinearLayout>
	    
    	<EditText
	        android:id="@+id/editMobilePhone"
	        android:visibility="gone"
	        android:inputType="phone"
	        android:background="@drawable/rectangle_grey"
	        android:layout_width="fill_parent"
	        android:paddingTop="15dp"
	        android:paddingLeft="10dp"
	        android:paddingBottom="15dp"
	        android:layout_height="50dp" />
	    	    
	    <View
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:background="#000000"/>
	
	    <LinearLayout
	        android:id="@+id/home"
	        android:onClick="homePhoneClicked"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/rectangle_white"
	        android:orientation="horizontal" >
	    	<TextView
		        android:id="@+id/homePhoneHeading"
		        android:layout_width="wrap_content"
		   		android:layout_height="wrap_content"
		        android:paddingTop="15dp"
		        android:paddingLeft="10dp"
		        android:textColor="#787878"
		        android:text="@string/home_phone" />
	      <TextView
		        android:id="@+id/homePhone2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="15dp"
		        android:paddingLeft="10dp"
		        android:text="@string/first_name" />
    	</LinearLayout>
    	
	    <EditText
	        android:id="@+id/editHomePhone"
	        android:visibility="gone"
	        android:inputType="phone"
	        android:background="@drawable/rectangle_grey"
	        android:layout_width="fill_parent"
	        android:paddingTop="15dp"
	        android:paddingLeft="10dp"
	        android:paddingBottom="15dp"
	        android:layout_height="50dp" />
	    	    
	    <View
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:background="#000000"/>
	
	    <LinearLayout
	        android:id="@+id/work"
	        android:onClick="workPhoneClicked"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/rectangle_white"
	        android:orientation="horizontal" >
		    <TextView
		        android:id="@+id/workPhoneHeading"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		        android:paddingTop="15dp"
		        android:paddingLeft="10dp"
		        android:textColor="#787878"
		        android:text="@string/work_phone" />
		     <TextView
		        android:id="@+id/workPhone2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="15dp"
		        android:paddingLeft="10dp"
		        android:text="@string/first_name" />
	    </LinearLayout>
	    
	    <EditText
	        android:id="@+id/editWorkPhone"
	        android:visibility="gone"
	        android:inputType="phone"
	        android:background="@drawable/rectangle_grey"
	        android:layout_width="fill_parent"
	        android:paddingTop="15dp"
	        android:paddingLeft="10dp"
	        android:paddingBottom="15dp"
	        android:layout_height="50dp"/>
	    	    
	    <View
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:background="#000000"/>
	
	    <LinearLayout
	        android:id="@+id/email"
	        android:onClick="emailClicked"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/rectangle_white"
	        android:orientation="horizontal" >
		    <TextView
		        android:id="@+id/emailHeading"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		        android:paddingTop="15dp"
		        android:textColor="#787878"
		        android:paddingLeft="10dp"
		        android:text="@string/email" />
		    <TextView
		        android:id="@+id/email2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="15dp"
		        android:paddingLeft="10dp"
		        android:text="@string/first_name" />
	    </LinearLayout>
	    
	    <EditText
	        android:id="@+id/editEmail"
	        android:visibility="gone"
	        android:inputType="textEmailAddress"
	        android:background="@drawable/rectangle_grey"
	        android:layout_width="fill_parent"
	        android:paddingTop="15dp"
	        android:paddingLeft="10dp"
	        android:paddingBottom="15dp"
	        android:layout_height="50dp"/>
	    	    
	    <View
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:background="#000000"/>
	
	    <LinearLayout
	        android:id="@+id/address"
	        android:onClick="addressClicked"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/rectangle_white"
	        android:orientation="horizontal" >
		    <TextView
		        android:id="@+id/addressHeading"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		        android:paddingTop="15dp"
		        android:textColor="#787878"
		        android:paddingLeft="10dp"
		        android:text="@string/address"/>	  
		    <TextView
		        android:id="@+id/address2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="15dp"
		        android:paddingLeft="10dp"
		        android:text="@string/first_name" />
	    </LinearLayout>	    
    
	    <EditText
	        android:id="@+id/editAddress"
	        android:visibility="gone"
	        android:inputType="textPostalAddress"
	        android:background="@drawable/rectangle_grey"
	        android:layout_width="fill_parent"
	        android:paddingTop="15dp"
	        android:paddingLeft="10dp"
	        android:paddingBottom="15dp"
	        android:layout_height="50dp" />
	    
	    <View
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:background="#000000"/>
	
	    <LinearLayout
	        android:id="@+id/dob"
	        android:onClick="dobClicked"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/rectangle_white"
	        android:orientation="horizontal" >
		    <TextView
		        android:id="@+id/dateOfBirthHeading"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		        android:paddingTop="15dp"
		        android:paddingLeft="10dp"
		        android:textColor="#787878"
		        android:text="@string/date_of_birth" />
		    <TextView
		        android:id="@+id/dob2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="15dp"
		        android:paddingLeft="10dp"
		        android:text="@string/first_name" />
	    </LinearLayout>
	    
	    <EditText
	        android:id="@+id/editDOB"
	        android:visibility="gone"
	        android:inputType="date"
	        android:background="@drawable/rectangle_grey"
	        android:layout_width="fill_parent"
	        android:paddingTop="15dp"
	        android:paddingLeft="10dp"
	        android:paddingBottom="15dp"
	        android:layout_height="50dp"/>
	    
	    <View
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:background="#000000"/>
	    	 
	</LinearLayout>
</ScrollView>
